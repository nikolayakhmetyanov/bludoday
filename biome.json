{
	"$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/src/**/*",
			"**/convex/**/*",
			"**/*.config.ts",
			"!**/src/app/routeTree.gen.ts",
			"!**/src/app/styles.css"
		]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSpacing": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"useExhaustiveDependencies": "warn"
			},
			"suspicious": {
				"noExplicitAny": "error",
				"noDoubleEquals": "error",
				"noDuplicateJsxProps": "error"
			},
			"style": {
				"useImportType": "error",
				"useExportType": "error",
				"useTemplate": "error",
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"filenameCases": ["kebab-case"]
					}
				}
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": {
					"level": "warn",
					"options": {
						"maxAllowedComplexity": 15
					}
				}
			}
		}
	}
}
